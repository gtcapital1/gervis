# Configurazione ambiente di produzione
NODE_ENV=production

# Configurazione database
# Modifica i parametri in base alle tue credenziali PostgreSQL
DATABASE_URL=postgresql://gervisuser:TuaPasswordSicura@localhost:5432/gervis

# Configurazione applicazione
PORT=3000
HOST=0.0.0.0
SESSION_SECRET=ChangeThisToASecureLongRandomString

# URL base dell'applicazione (importante per le email e i link di onboarding)
BASE_URL=https://tuo-dominio.com

# Configurazione email SMTP
SMTP_HOST=smtp.tuoservizio.com
SMTP_PORT=587
SMTP_USER=tuo-email@example.com
SMTP_PASS=TuaPasswordEmail
SMTP_FROM=no-reply@tuo-dominio.com
SMTP_FROM_NAME=Gervis Financial Advisor

# Configurazione della sicurezza
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# Configurazione dei limiti
MAX_ASSET_COUNT=50
MAX_UPLOAD_SIZE_MB=10

# Impostazioni lingua predefinita (italian o english)
DEFAULT_LANGUAGE=italian

# Configurazione logging
LOG_LEVEL=error